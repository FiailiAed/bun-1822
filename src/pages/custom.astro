---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import CommonFooter from '../components/CommonFooter.astro';
import CommonHeader from '../components/CommonHeader.astro';

import { ViewTransitions } from 'astro:transitions';

import { Image } from 'astro:assets';
import mainLogo from '../images/main_black-lax.png';
---

<Layout title="1822 LAX">
	<!-- screen -->
	<div class="flex min-h-screen flex-col overflow-x-hidden">
		<!-- nav -->
		<CommonHeader />

		<!-- main -->
		<main id="main" class"relative z-10 flex flex-1 flex-col">
			<section class="landing-section relative overflow-x-hidden pb-40 pt-14 sm:pt-20 lg:pt-32">
				<h1 class="mb-10 max-w-[18ch] px-4 text-center font-obviously text-5xl/[1.1] font-semibold md:text-6xl/[1.1] lg:text-7xl/[1.1]">
					<span class="text-gradient"><a href="/">1822</a></span>
				</h1>
				<ViewTransitions />
				<p class="body px-2 md:px-8 text-center text-astro-gray-100 body-large max-w-3xl">
					Custimization
				</p>
			</section>

			<div class="relative">
				<div class="bg-grid absolut inset-0 z-grid"></div>
				<div class="bg-grid relative grid gap-32 sm:gap-40 md:gap-48 lg:gap-64">
					<section class="">
					</section>
				</div>
			</div>
		</main>

		<CommonFooter />

	</div>

</Layout>

<style>
	main {
		margin: auto;
		padding: auto;
		width: 100%;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
		border-radius: 1rem;
	}
	.main-logo {
		position: relative;
		top: 0;
		left: 0;
		width: auto;
		height: 100px;
		z-index: -1;
		border-radius: 10rem;
	}
	.landing-section:before {
		position: absolute;
		z-index: -1;
		content: "";
		top: 0%;
		bottom: 10%;
		width: 150%;
		left: -25%;
		background: linear-gradient(83.21deg,#efc050 0%,#cccccc 100%);
		-webkit-mask-image: radial-gradient(rgba(0,0,0,.45),transparent 70%);
		mask-image: radial-gradient(rgba(0,0,0,.45),transparent 70%);
	}
	.landing-section {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		overflow: visible;
		text-align: center;
	}
	.bg-grid {
		background-size: 100px 100px;
		z-index: -2;
		background-image:url(https://astro.build/assets/bg-grid.png);
		background-position-y: -9px;
		-webkit-mask-image: linear-gradient(to bottom,transparent,10%,white,90%,transparent);
		mask-image: linear-gradient(to bottom,transparent,10%,white,90%,transparent);
	}
	.text-base {
		font-size: 1rem;
		line-height: 1.5rem;
	}
	.text-gray {
		color: #cccccc;
	}
	.link {
		--tw-text-opacity: 1;
		color: rgb(242 246 250 / var(--tw-text-opacity));
		transition-property: color,background-color,border-color,text-decoration-color,fill,stroke;
		transition-timing-function: cubic-bezier(.4,0,.2,1);
		transition-duration: .15s;
	}
	.text-astro-gray-100 {
		--tw-text-opacity: 1;
		color: rgb(242 246 250 / var(--tw-text-opacity));
	}
	a {
		color: inherit;
		text-decoration: inherit;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}

	.shadow-lg {

		--tw-shadow: 0px 25px 7px rgba(24, 24, 27, .01), 0px 16px 6px rgba(24, 24, 27, .04), 0px 9px 5px rgba(24, 24, 27, .15), 0px 4px 4px rgba(24, 24, 27, .26), 0px 1px 2px rgba(24, 24, 27, .29), 0px 0px 0px rgba(24, 24, 27, .3);

		--tw-shadow-colored: 0px 25px 7px var(--tw-shadow-color), 0px 16px 6px var(--tw-shadow-color), 0px 9px 5px var(--tw-shadow-color), 0px 4px 4px var(--tw-shadow-color), 0px 1px 2px var(--tw-shadow-color), 0px 0px 0px var(--tw-shadow-color);

		box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000), var(--tw-ring-shadow, 0 0 #0000),var(--tw-shadow);
	}

	.border-astro-gray-500 {
		--tw-border-opacity: 0.75;
		border-color: rgb(204 204 250 / var(--tw-border-opacity));
	}
</style>
