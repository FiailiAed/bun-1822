---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<span class="info-panel bg-slate-100">
	<span class="info-panel-border">
		<h2 class="text-black m-10">
			{title}
		</h2>
		<p class="text-black m-20">
			{body}
		</p>
	</span>
</span>
<style>
	.info-panel {
		opacity: 1;
		border-radius: 1rem;
	}
	h2 {
		font-size: 2rem;
		font-weight: 500;
		line-height: 1;
		text-align: left;
		margin-bottom: 0.75em;
	}
</style>
